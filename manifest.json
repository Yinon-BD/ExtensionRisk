{
    "manifest_version": 3,
    "name": "Extension Risk Assessor",
    "version": "1.0",
    "description": "Analyze the security risk of Chrome extensions using OpenAI.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://*/*", "http://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  